<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_colors_background_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    tools:context=".UserColorsPopup">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        android:orientation="vertical"
        android:background="@color/lightGrey">
        <ScrollView
            android:id="@+id/user_colors_scroll_view"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1">
            <GridLayout
                android:id="@+id/user_colors_grid_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </GridLayout>

        </ScrollView>

        <com.rarepebble.colorpicker.ColorPickerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/color_picker_view"
            app:colorpicker_showAlpha="true"
            app:colorpicker_showHex="true"
            app:colorpicker_showPreview="true"/>

        <Button
            android:id="@+id/user_colors_confirm_button"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/confirmbutton"
            android:textColor="@color/white"
            android:text="@string/confirm" />
    </LinearLayout>
</LinearLayout>
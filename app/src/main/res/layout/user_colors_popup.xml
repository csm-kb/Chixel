<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_colors_background_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    tools:context=".UserColorsPopup">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        android:orientation="vertical"
        android:background="@color/lightGrey">
        <ScrollView
            android:id="@+id/user_colors_scroll_view"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1">
            <GridLayout
                android:id="@+id/user_colors_grid_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>
        <Button
            android:id="@+id/user_colors_confirm_button"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/confirmbutton"
            android:textColor="@color/white"
            android:text="Confirm"/>
    </LinearLayout>
</LinearLayout>